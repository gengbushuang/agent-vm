<assembly>
    <id>bin</id>
    <formats>
        <!-- zip,tar,tar.gz,tar.bz2,jar,dir,war -->
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <!-- 依赖包的输出路径 -->
        <dependencySet>
       		<useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <!-- 需要打包的文件集 -->
    <fileSets>
        <fileSet>
        	<directory>lib</directory>
        	<outputDirectory>/lib</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>